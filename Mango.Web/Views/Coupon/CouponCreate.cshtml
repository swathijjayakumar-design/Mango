@using Mango.Web.Services.IServices

@model CouponDTO

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Create Coupon</h5>
                </div>

                <div class="card-body">
                    <form asp-action="CouponCreate" method="post">

                        <div class="mb-3">
                            <label asp-for="CouponDescription" class="form-label"></label>
                            <input asp-for="CouponDescription" class="form-control" placeholder="Enter coupon name" />
                            <span asp-validation-for="CouponDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CouponAmount" class="form-label"></label>
                            <input asp-for="CouponAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="CouponAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiscAmount" class="form-label"></label>
                            <input asp-for="DiscAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="DiscAmount" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button asp-action="CouponCreate" type="submit" class="btn btn-primary">Create</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




